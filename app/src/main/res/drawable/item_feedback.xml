<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/imgfeedback"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/exampleavatar"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <!-- Username + Rating + Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Username -->
                <TextView
                    android:id="@+id/txtnamefeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User001"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- Stars + Date in same row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <!-- Stars -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/white_baseline_star_rate_24"/>
                        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/white_baseline_star_rate_24"/>
                        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/white_baseline_star_rate_24"/>
                        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/white_baseline_star_rate_24"/>
                        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/white_baseline_star_rate_24"/>
                    </LinearLayout>

                    <!-- Spacer -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <!-- Date -->
                    <TextView
                        android:id="@+id/txtdatefeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29/03/2025"
                        android:textColor="#33FF99"
                        android:textSize="12sp"
                        android:paddingStart="8dp"/>
                </LinearLayout>

                <!-- Feedback content -->
                <TextView
                    android:id="@+id/txtcontentfeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ứng dụng rất tiện lợi và dễ dùng, mình rất thích giao diện!"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
