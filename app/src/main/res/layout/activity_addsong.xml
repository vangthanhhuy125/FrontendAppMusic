<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title: Add Song -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Song"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Form Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1C1C1E"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Image:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <FrameLayout
                android:id="@+id/frameImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/imgAddImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Add Image"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconaddimage" />
            </FrameLayout>

            <!-- Label: Image -->

            <!-- Image Picker -->

            <!-- Voice Label + Button -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voice:"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/btnChooseVoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose voice"
                android:textColor="#FFFFFF"
                android:background="@drawable/dotted_border"
                android:layout_marginBottom="12dp" />

            <!-- File -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File:"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/btnChooseFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose file"
                android:textColor="#FFFFFF"
                android:background="@drawable/dotted_border"
                android:layout_marginBottom="12dp" />

            <!-- Song Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Songâ€™s name:"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtSongName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter song name ..."
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="text" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Artist -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist:"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter artist ..."
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="text" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter description ..."
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:inputType="text" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:layout_gravity="center"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
