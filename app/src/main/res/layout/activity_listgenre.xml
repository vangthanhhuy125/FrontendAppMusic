<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Ô tìm kiếm -->
        <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:hint="Type To Search"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/box_white_background"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp" />

        <!-- Chữ "All genre" + icon filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
<!--            app:gravity="space_between|center_vertical"-->


            <TextView
                android:id="@+id/allGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All genre"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Lưới 2 cột chứa 6 item -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:rowCount="3">

            <!-- Item 1 -->
            <include layout="@layout/item_genre" />
            <!-- Item 2 -->
            <include layout="@layout/item_genre" />
            <!-- Item 3 -->
            <include layout="@layout/item_genre" />
            <!-- Item 4 -->
            <include layout="@layout/item_genre" />
            <!-- Item 5 -->
            <include layout="@layout/item_genre" />
            <!-- Item 6 -->
            <include layout="@layout/item_genre" />

        </GridLayout>
    </LinearLayout>
</ScrollView>
