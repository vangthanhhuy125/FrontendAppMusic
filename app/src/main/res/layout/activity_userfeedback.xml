<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/activity_userfeedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/iconback"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp" />

        <!-- Nội dung chính căn giữa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <!-- Feedback Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_marginBottom="6dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your opinion of"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="2dp" />

            <!-- Zemo -->
            <TextView
                android:id="@+id/tvZemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zemo?"
                android:textColor="#00FF00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Star Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconstar1"
                    android:padding="5dp" />
                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconstar1"
                    android:padding="5dp" />
                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconstar1"
                    android:padding="5dp" />
                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconstar1"
                    android:padding="5dp" />
                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/iconstar1"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Feedback Input -->
        <EditText
            android:id="@+id/etFeedback"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#005A4D"
            android:hint="Please leave your feedback here..."
            android:textColorHint="#D3D3D3"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:gravity="top|start"
            android:layout_marginBottom="10dp" />

        <!-- Upload Image Button -->
        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image Here ..."
            android:backgroundTint="#D4AF37"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Send Button -->
        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:backgroundTint="#00695C"
            android:textColor="#FFFFFF"
            android:layout_gravity="end"
            android:paddingHorizontal="20dp" />
    </LinearLayout>
</ScrollView>
