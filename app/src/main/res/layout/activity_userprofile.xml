<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/activity_userprofile">

    <!-- Nút Edit ở góc trên bên phải -->
    <LinearLayout
        android:id="@+id/editContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/iconedit"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <!-- Nội dung cuộn bên dưới -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_button"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="32dp">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/avatar_app_music"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:clipToOutline="true" />

            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green Worm"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#AAAAAA"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example@Gmail.Com"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#AAAAAA"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0985825804"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Music Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:weightSum="3"
                android:gravity="center">

                <!-- Songs -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C4B653"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart"
                        android:tint="#000000" />

                    <TextView
                        android:text="100 Songs"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Playlists -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C4B653"
                    android:padding="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_playlist"
                        android:tint="#000000" />

                    <TextView
                        android:text="12 Playlists"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Artists -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C4B653"
                    android:padding="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_artist"
                        android:tint="#000000" />

                    <TextView
                        android:text="5 Artists"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- About -->
            <TextView
                android:text="About"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_arrow_right" />

            <Button
                android:id="@+id/btnStorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Storage"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_arrow_right" />

            <!-- Others -->
            <TextView
                android:text="Others"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help & Support"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_arrow_right" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"
                android:padding="12dp"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_arrow_right" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
