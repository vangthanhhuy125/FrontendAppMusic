<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#000000"
        android:gravity="center"
        android:id="@+id/activity_changepassword">

        <!-- Tiêu đề "Change Password" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change \nPassword"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Trường Email với Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_baseline_email_24"
                app:tint="#FFFFFF"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/email_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Email Address"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="20sp"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>


        <!-- Trường New Password với Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_baseline_lock_24"
                app:tint="#FFFFFF"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/new__edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="New Password"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="20sp"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />


    </LinearLayout>
</FrameLayout>