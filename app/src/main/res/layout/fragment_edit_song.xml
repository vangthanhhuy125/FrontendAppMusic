<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".fragment.artist.EditSongFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tiêu đề chính -->
            <TextView
                android:id="@+id/editSongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Song"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp" />

            <!-- Ảnh bài hát và nút chỉnh sửa -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/songImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exampleavatar"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/editImageButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_gravity="top|end"
                    android:layout_margin="6dp" />
            </FrameLayout>

            <!-- Nhãn và ô nhập tên bài hát -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song's name:"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/songNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:hint="Enter song name" />

            <!-- Nhãn và ô nhập tên nghệ sĩ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist:"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/artistInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:hint="Enter artist name" />

            <!-- Nhãn và ô nhập mô tả -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/descriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:hint="Enter description" />

            <!-- Nút lưu -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:backgroundTint="#00C896"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
