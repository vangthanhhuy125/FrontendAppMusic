<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="#000000"
        android:gravity="center">

        <!-- Tiêu đề "Log In" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Trường Username với Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_baseline_email_24"
                app:tint="#FFFFFF"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/email_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Email Address"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="20sp"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>

        <!-- Trường Password với Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_baseline_lock_24"
                app:tint="#FFFFFF"
                android:scaleType="centerCrop"
                android:contentDescription="UsernameIcon"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Password"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>

        <!-- Checkbox và Forget Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

<!--            <CheckBox-->
<!--                android:id="@+id/rememberMeCheckBox"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Remember me"-->
<!--                android:textColor="#FFFFFF" />-->

            <TextView
                android:id="@+id/forgetPasswordTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Forget your password?"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Nút Log In -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>

        <!-- Liên kết Sign Up -->
        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First time? Sign up"
            android:textSize="16sp"
            android:textColor="#FF9800"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>