<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.auth.RegisterFragment"
    android:background="#000000"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="#FFFFFF"
            android:contentDescription="Back button"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#000000"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Tiêu đề "Register" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Trường Email với Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_baseline_email_24"
                app:tint="#FFFFFF"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/mail_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Mail Address"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="20sp"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_baseline_lock_24"
                app:tint="#FFFFFF"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:password="true"
                android:hint="Password"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="20sp"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_person_24"
                app:tint="#FFFFFF"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/fullname_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Full Name"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="20sp"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>

        <!-- Nút Register -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />


        <!-- Liên kết Sign Up -->
        <TextView
            android:id="@+id/signInTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account? Sign in"
            android:textColor="#FF9800"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>