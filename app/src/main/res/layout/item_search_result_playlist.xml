<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#000000">
    <ImageView
        android:id="@+id/playlist_cover_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/white_baseline_music_note_24"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/playlist_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist's title"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:textStyle="bold"
            android:textColor="#AAAAAA"
            android:textSize="16dp"/>
    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:checked="false"
        app:buttonTint="@color/custom_checkbox_color"
        android:button="@drawable/custom_checkbox_01"
        />
</LinearLayout>